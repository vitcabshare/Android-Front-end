<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tanmayjha.vitcabs.Entity.Settings.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
        style="@style/HeadingFont"
        android:text="Personal Details"/>

    <Switch
        android:layout_marginTop="5dp"
        android:text="Show my last name ?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_switch_last_name" />

    <Switch
        android:text="Show my email to other?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_switch_email" />

    <Switch
        android:text="Show my phone no. to others ?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_switch_phone_no" />

</LinearLayout>
