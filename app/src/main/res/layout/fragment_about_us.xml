<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tanmayjha.vitcabs.Entity.AboutUs.AboutUsFragment">

    <ImageView
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">
            <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                android:text="Our Aim:"
                android:layout_gravity="center_horizontal"
                style="@style/HeadingFont"/>
            <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                style="@style/BodyFont"
                android:padding="10dp"
                android:text="We aims at easing the process of Cab Sharing and Booking between VIT and near-by places such as Airports, Railway Stations, Pondicherry, and Kodaikanal."/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">
            <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                android:text="Credit:"
                android:layout_gravity="center_horizontal"
                style="@style/HeadingFont"/>
            <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                style="@style/BodyFont"
                android:padding="10dp"
                android:text="Design: Tanmay Jha\nFrontend: Tanmay Jha\nBackend:___________ "/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>