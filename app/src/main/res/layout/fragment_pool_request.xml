<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tanmayjha.vitcabs.Entity.PoolRequest.PoolRequestFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
        style="@style/HeadingFont"
        android:layout_margin="10dp"
        android:text="You have received requests from following people:\nContact and Share a cab! "/>

    <!--TODO: This card will be included dynamically using code-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/member_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#80000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                        style="@style/BodyFont"
                        android:text="Tanmay Jha"/>
                    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                        style="@style/BodyFont"
                        android:text="Date of journey:"/>
                    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                        style="@style/BodyFont"
                        android:text="Katapadi to Chennai "/>
                    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                        style="@style/BodyFont"
                        android:text="Time of journey: 4:00pm"/>
                    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                        style="@style/BodyFont"
                        android:text="Contact no: "/>
                    <com.example.tanmayjha.vitcabs.Control.Font.MontserratTextView
                        style="@style/BodyFont"
                        android:text="Email: "/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:src="@drawable/ic_clear_all"
        app:fabSize="normal"
        android:id="@+id/clear_all_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="14dp"/>

    <!--TODO: Replace this button image with clear all image-->

</FrameLayout>